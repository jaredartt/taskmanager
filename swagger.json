{
  "swagger": "2.0",
  "info": {
    "title": "Task Manager",
    "version": "1.0.0"
  },
  "paths": {
    "/api-docs": {
        "get": {
            "description": "Get Swagger API documentation",
            "responses": {
                "200": {
                    "description": "Successful response"
                }
            }
        }
    },
    "/tasks/{taskId}": {
      "get": {
        "description": "Get a task by ID",
        "parameters": [
          {
            "name": "taskId",
            "in": "path",
            "description": "ID of the task to retrieve",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response"
          }
        }
      },
      "put": {
        "description": "Update an existing task by ID",
        "parameters": [
          {
            "name": "taskId",
            "in": "path",
            "description": "ID of the task to update",
            "required": true,
            "type": "string"
          },
          {
            "name": "task",
            "in": "body",
            "description": "Updated task data",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "desc": {
                  "type": "string"
                },
                "dueDate": {
                  "type": "string"
                },
                "isCompleted": {
                  "type": "boolean"
                },
                "tags": {
                  "type": "string"
                }
              }
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Task updated"
          }
        }
      },
      "delete": {
        "description": "Delete a task by ID",
        "parameters": [
          {
            "name": "taskId",
            "in": "path",
            "description": "ID of the task to delete",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Task deleted"
          }
        }
      }
    },
    "/tasks": {
      "get": {
        "description": "Get all tasks",
        "responses": {
          "200": {
            "description": "Successful response"
          }
        }
      },
      "post": {
        "description": "Create a new task",
        "parameters": [
          {
            "name": "task",
            "in": "body",
            "description": "Task to create",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "desc": {
                  "type": "string"
                },
                "dueDate": {
                  "type": "string"
                },
                "isCompleted": {
                  "type": "boolean"
                },
                "tags": {
                  "type": "string"
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Task created"
          }
        }
      }
    }
  }
}
